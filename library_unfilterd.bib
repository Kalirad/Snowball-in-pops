@article{Wang2013,
  author = {Wang, Richard J and Ané, Cécile and Payseur, Bret A.},
  year = {2013},
  title = {THE EVOLUTION OF HYBRID INCOMPATIBILITIES ALONG A PHYLOGENY},
  journal = {Evolution},
  publisher = {Wiley Online Library},
