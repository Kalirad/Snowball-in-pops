	Journal = {Evolution},
	Number = {2},
	Pages = {418--431},
	Title = {Dynamics of Hybrid Incompatibility in Gene Networks in a Constant Environment},
	Volume = {63},
	Year = {2009}}

@article{wilke01,
	Abstract = {Darwinian evolution favours genotypes with high replication rates, a process called 'survival of the fittest'. However, knowing the replication rate of each individual genotype may not suffice to predict the eventual survivor, even in an asexual population. According to quasi-species theory, selection favours the cloud of genotypes, interconnected by mutation, whose average replication rate is highest(1-5). Here we confirm this prediction using digital organisms that self-replicate, mutate and evolve(6-9). Forty pairs of populations were derived from 40 different ancestors in identical selective environments, except that one of each pair experienced a 4-fold higher mutation rate. In 12 cases, the dominant genotype that evolved at the lower mutation rate achieved a replication rate >1.5-fold faster than its counterpart. We allowed each of these disparate pairs to compete across a range of mutation rates. In each case, as mutation rate was increased, the outcome of competition switched to favour the genotype with the lower replication rate. These genotypes, although they occupied lower fitness peaks, were located in flatter regions of the fitness surface and were therefore more robust with respect to mutations.},
	Author = {Wilke, C. O. and Wang, J. L. and Ofria, C. and Lenski, R. E. and Adami, C.},
	Date-Added = {2007-09-04 16:02:10 -0500},
